@using Models
@model DanhMucSanPhamPaging

@if (Model.ListDanhMucSanPham != null && Model.ListDanhMucSanPham.Any())
{
    <div class="banner">
        <div class="container">
            <div class="row">
                @foreach (var item in Model.ListDanhMucSanPham)
                {
                    <div class="col-md-4">
                        <div class="banner_item align-items-center" style="background-image: url(~/Content/assetkh/images/banner_1.jpg)">
                            <div class="banner_category">
                                <a href="/danh-muc-san-pham/@item.Id">@item.TenDanhMucSP</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <p>No products available.</p>
}

