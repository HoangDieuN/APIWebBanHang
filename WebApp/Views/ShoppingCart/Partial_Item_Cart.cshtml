@using Models
@model IEnumerable<ShoppingCartItem>
<table class="table">
    <tr class="text-center">
        <th>STT</th>
        <th>Ảnh sản phẩm</th>
        <th>Tên sản phẩm</th>
        <th>Danh mục</th>
        <th>Giá</th>

        <th style="width:100px;">Số lượng</th>
        <th>Thành tiền</th>
        <th style="width:200px;">

        </th>
    </tr>
    @if (Model != null && Model.Any())
    {
        var i = 0;
        var tongtien = 0.0f;
        foreach (var item in Model)
        {
            tongtien += item.TongTien;
            <tr class="text-center" id="trow_@item.SanPhamId">
                <td>@(i+1)</td>
                <td><img src="@Url.Content(item.ProductImg)" width="60" /></td>
                <td>
                    <a href="/chi-tiet/@item.MaSanPham-p@(item.SanPhamId)">
                        @item.TenSanPham
                    </a>
                </td>
                <td>@item.TenDanhMucSP</td>
                <td>@item.GiaGoc</td>
                <td>
                    <input type="number" class="form-control" id="Quantity_@item.SanPhamId" value="@item.Quantity" min="1" />
                </td>
                <th>@item.TongTien</th>
                <td>
                    <a href="#" data-id="@item.SanPhamId" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                    <a href="#" data-id="@item.SanPhamId" class="btn btn-sm btn-success btnUpdate">Cập nhật</a>
                </td>
            </tr>
            i++;
        }
        <tr>
            <th colspan="6" class="text-right">Tổng: </th>
            <th class="text-center">@tongtien</th>
            <th></th>
        </tr>

    }
    else
    {
        <tr>
            <th colspan="7">Không có sản phẩm trong giỏ hàng!!</th>
        </tr>
    }
</table>

