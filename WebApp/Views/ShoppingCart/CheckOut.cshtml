
@{
    ViewBag.Title = "Thanh toán";
}
<link rel="stylesheet" type="text/css" href="~/Content/assetkh/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assetkh/styles/categories_responsive.css">
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/home">Home</a></li>
                    <li class="active"><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Thanh toán</a></li>
                </ul>
            </div>

            <!-- Header -->
            <div class="row">
                <div class="col-md-8 text-center">
                    <h1>Thanh Toán</h1>
                    <p>Bạn hãy kiểm tra kĩ lại thông tin đơn hàng trước khi đặt hàng !</p>
                </div>
            </div>
            <!-- Thông tin thanh toán -->
            <hr />
            @if (ViewBag.CheckCart != null)
            {
                <div class="row">
                    <div class="col-md-9">
                        @Html.Action("Partial_CheckOut", "Shoppingcart")
                    </div>
                    <div class="col-md-3">
                        @Html.Action("Partial_Item_ThanhToan", "ShoppingCart")
                    </div>
                </div>
            }
            else
            {
                <div>
                    Bạn chưa có sản phẩm nào. Vui long quay lại trang <a href="/san-pham">sản phẩm</a> để mua hàng.
                </div>
            }
        </div>
    </div>
</div>

<script src="~/Content/assetkh/js/jquery-3.2.1.min.js"></script>
@section scripts{
    <script src="~/Content/assetkh/js/categories_custom.js"></script>
    <script>
        function Ònailure(rs) {
            if (!rs.Success) {
                $('#show_success').html("Bạn mua hàng thất bại! Xin vui lòng thử lại");
            }
        }
        $(document).ready(function () {
            $('#myForm').validate({
                rules: {
                    'HoTen': {
                        required: true
                    },
                    'SoDT': {
                        required: true
                    },
                    'DiaChi': {
                        required: true
                    },
                    'Email': {
                        required: true,
                        email: true
                    }
                },
                messages: {
                    'HoTen': 'Bạn phải nhập họ tên',
                    'SoDT': 'Bạn phải nhập số điện thoại',
                    'DiaChi': 'Bạn phải nhập địa chỉ',
                    'Email': 'Email chưa hợp lệ'
                }
            });
        });
    </script>
}


