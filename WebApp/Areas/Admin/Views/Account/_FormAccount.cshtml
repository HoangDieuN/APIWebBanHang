@using Models
@using Utilities
@model User

<div id="form-taikhoan">
    <div class="row">
        <div class="col-sm-12 group-label mb-2">
            <h4>THÔNG TIN NGƯỜI DÙNG </h4>
        </div>
    </div>
    <form class="form-info">
        @Html.HiddenFor(x => x.Id)
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="HoTen">Họ Tên<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="HoTen" name="HoTen" value="@Model.HoTen">
            </div>
            <label class="col-sm-2 col-form-label" for="RoleId">Phân quyền<span class="text-danger">*</span></label>
            <div class="col-md-4 col-sm-12">
                <select class="form-control select2" id="RoleId" name="RoleId">
                    <option value=""></option>
                    @if (Model.RoleId > 0)
                    {
                        <option value="@Model.RoleId" selected>@Model.TenViet</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="UserName">Tên tài khoản<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="UserName" name="UserName" value="@Model.UserName">
            </div>
            <label class="col-sm-2 col-form-label" for="Password">Mật khẩu <span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="Password" name="Password" value="@Model.Password" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="DiaChi">Địa chỉ<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="DiaChi" name="DiaChi" value="@Model.DiaChi">
            </div>
            <label class="col-sm-2 col-form-label" for="SoDT">Số điện thoại<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="SoDT" name="SoDT" value="@Model.SoDT">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="Email">Email<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email">
            </div>
            @*<label class="col-sm-2 col-form-label" for="Avatar">Ảnh đại diện<span class="text-danger"></span></label>
            <div class="col-sm-4 field" id="avatar">
            </div>*@
        </div>
    </form>
</div>
<script src="~/Scripts/js/account/_FormAccount.js?v=@(DateTime.Now.Ticks)"></script>



