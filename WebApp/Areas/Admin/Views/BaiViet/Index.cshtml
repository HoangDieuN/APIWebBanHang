
@{
    ViewBag.Title = "Danh sách bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <div class="pagetitle">
        <h1>Bài viết</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                <li class="breadcrumb-item">Bài viết</li>
                <li class="breadcrumb-item active">Danh sách </li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
}
<!-- row -->
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex mb-1">
                <h4 class="card-title mb-0 flex-grow-1"><i class="ri-filter-line"></i> TIÊU CHÍ TÌM KIẾM</h4>
            </div>
            <div class="card-body pt-0">
                <div class="basic-form" id="form-filter">
                    <div class="form-group row">
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Từ khoá, tên bài viết,..." id="txt-keywords" />
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-outline-info" id="btn-search">
                                            <i class="ri-search-line align-bottom"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- row -->
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 text-uppercase flex-grow-1">Danh sách bài viết</h4>
            </div>
            <div class="card-body">
                <div class="align-items-center d-flex mb-2" id="tbl-danhsach-toolbar">
                    <div class="flex-grow-1">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-primary" id="btn-add"><i class="ri-add-circle-line align-bottom"></i> Thêm mới</button>
                            <button type="button" class="btn btn-sm btn-outline-primary" id="btn-active"><i class="ri-checkbox-circle-line align-bottom text-success"></i> Hiển thị</button>
                            <button type="button" class="btn btn-sm btn-outline-primary" id="btn-deny"><i class="ri-close-circle-line align-bottom text-danger"></i> Không hiển thị</button>

                        </div>
                    </div>
                    <div class="flex-shrink-0"></div>
                </div>
                <div class="row">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0" id="tbl-danhsach"></table>
                    </div>
                </div>
            </div>      
        </div>
    </div>
</div>

<div class="nv-modal xl" id="modal"></div>
<div class="nv-modal lg" id="modal-file"></div>

@section scripts {
    <script src="~/Scripts/extens/common-upload-file.js?v=@(DateTime.Now.Ticks)"></script>
    <script src="~/Scripts/js/bai-viet/baiViet.config.js?v=@(DateTime.Now.Ticks)"></script>
    <script src="~/Scripts/js/bai-viet/viewIndex.js?v=@(DateTime.Now.Ticks)"></script>
}

