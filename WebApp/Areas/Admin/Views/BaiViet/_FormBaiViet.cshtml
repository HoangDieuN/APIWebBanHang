@using Models
@using Utilities
@model BaiViet

<div id="form-baiviet">
    <div class="row">
        <div class="col-sm-12 group-label mb-2">
            <h4>THÔNG TIN BÀI VIẾT </h4>
        </div>
    </div>
    <form class="form-info">
        @Html.HiddenFor(x => x.Id)
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="TenBaiViet">Tên bài viết<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="TenBaiViet" name="TenBaiViet" value="@Model.TenBaiViet">
            </div>
            <label class="col-sm-2 col-form-label" for="FileAnh">File ảnh <span class="text-danger"></span></label>
            <div class="col-sm-4 field" id="fileanh">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="MoTa">Mô tả<span class="text-danger">*</span></label>
            <div class="col-sm-10">
                <textarea rows="4" class="form-control" id="MoTa" name="MoTa">@Model.MoTa</textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="ThongTin">Thông tin<span class="text-danger">*</span></label>
            <div class="col-sm-10">
                <textarea rows="4" class="form-control" id="ThongTin" name="ThongTin">@Model.ThongTin</textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="NoiDung">Nội dung<span class="text-danger">*</span></label>
            <div class="col-sm-10">
                <textarea rows="4" class="form-control" id="NoiDung" name="NoiDung">@Model.NoiDung</textarea>
            </div>
        </div>    
    </form>
</div>

<script src="~/Scripts/js/bai-viet/_FormBaiViet.js?v=@(DateTime.Now.Ticks)"></script>



