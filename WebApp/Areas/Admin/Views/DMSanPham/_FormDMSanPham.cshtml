@using Models
@using Utilities
@model DanhMucSanPham

<div id="form-dmsanpham">
    <div class="row">
        <div class="col-sm-12 group-label mb-2">
            <h4>THÔNG TIN DANH MỤC SẢN PHẨM </h4>
        </div>
    </div>
    <form class="form-info">
        @Html.HiddenFor(x => x.Id)
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="TenDanhMucSP">Tên danh mục sản phẩm<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="TenDanhMucSP" name="TenDanhMucSP" value="@Model.TenDanhMucSP">
            </div>
            <label class="col-sm-2 col-form-label" for="MaDanhMucSP">Mã danh mục sản phẩm<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="MaDanhMucSP" name="MaDanhMucSP" value="@Model.MaDanhMucSP">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="MoTa">Mô tả<span class="text-danger">*</span></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="MoTa" name="MoTa" value="@Model.MoTa">
            </div>
        </div>     
    </form>
</div>

<script src="~/Scripts/js/danh-muc-san-pham/_FormDMSanPham.js?v=@(DateTime.Now.Ticks)"></script>

