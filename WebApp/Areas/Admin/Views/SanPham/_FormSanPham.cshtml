@using Models
@using Utilities
@model SanPham

<div id="form-sanpham">
    <div class="row">
        <div class="col-sm-12 group-label mb-2">
            <h4>THÔNG TIN SẢN PHẨM </h4>
        </div>
    </div>
    <form class="form-info">
        @Html.HiddenFor(x => x.Id)
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="TenSanPham">Tên sản phẩm<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="TenSanPham" name="TenSanPham" value="@Model.TenSanPham">
            </div>
            <label class="col-sm-2 col-form-label" for="MaSanPham">Mã danh mục sản phẩm<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="MaSanPham" name="MaSanPham" value="@Model.MaSanPham">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="MoTa">Mô tả<span class="text-danger">*</span></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="MoTa" name="MoTa" value="@Model.MoTa">
            </div>
        </div>
    </form>
</div>

<script src="~/Scripts/js/san-pham/_FormSanPham.js?v=@(DateTime.Now.Ticks)"></script>


