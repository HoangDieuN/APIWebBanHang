@using Models
@using Utilities
@model SanPham

<div id="form-sanpham">
    <div class="row">
        <div class="col-sm-12 group-label mb-2">
            <h4>THÔNG TIN SẢN PHẨM </h4>
        </div>
    </div>
    <form class="form-info">
        @Html.HiddenFor(x => x.Id)
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="MaSanPham">Mã sản phẩm<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="MaSanPham" name="MaSanPham" value="@Model.MaSanPham">
            </div>
            <label class="col-sm-2 col-form-label" for="DanhMucId">Danh mục sản phẩm<span class="text-danger">*</span></label>
            <div class="col-md-4 col-sm-12">
                <select class="form-control select2" id="DanhMucId" name="DanhMucId">
                    <option value=""></option>
                    @if (Model.DanhMucId > 0)
                    {
                        <option value="@Model.DanhMucId" selected>@Model.TenDanhMucSP</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="TenSanPham">Tên sản phẩm<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="TenSanPham" name="TenSanPham" value="@Model.TenSanPham">
            </div>
            <label class="col-sm-2 col-form-label" for="Nam">Năm <span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control year-inputmask" id="Nam" name="Nam" value="@Model.Nam" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="GiaGoc">Giá gốc<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="GiaGoc" name="GiaGoc" value="@Model.GiaGoc">
            </div>
            <label class="col-sm-2 col-form-label" for="PhanTramGiam">Gía giảm<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="PhanTramGiam" name="PhanTramGiam" value="@Model.PhanTramGiam">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="MoTa">Mô tả<span class="text-danger">*</span></label>
            <div class="col-sm-10">
                <textarea rows="4" class="form-control" id="MoTa" name="MoTa">@Model.MoTa</textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="ThongTin">Thông tin<span class="text-danger">*</span></label>
            <div class="col-sm-10">
                <textarea rows="4" class="form-control" id="ThongTin" name="ThongTin">@Model.ThongTin</textarea>
            </div>
        </div>
        <div class="form-group row">
            @*<label class="col-sm-2 col-form-label" for="MoDuleId">Thuộc module<span class="text-danger">*</span></label>
            <div class="col-sm-4">
                <textarea rows="4" class="form-control" id="ThongTin" name="ThongTin">@Model.ThongTin</textarea>
            </div>*@
            <label class="col-sm-2 col-form-label" for="FileAnh">File ảnh <span class="text-danger"></span></label>
            <div class="col-sm-4 field" id="fileanh">
            </div>
        </div>
    </form>
</div>

<script src="~/Scripts/js/san-pham/_FormSanPham.js?v=@(DateTime.Now.Ticks)"></script>


